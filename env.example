# AI Workbench Environment Configuration
# Copy this file to .env and fill in your actual values

# LLM Provider Configuration (Required for Portia)
OPENAI_API_KEY=your_openai_api_key_here
PORTIA_API_KEY=your_portia_api_key_here

# Database Configuration (Optional)
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=workbench
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=workbench
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password

# SQLite (No configuration needed - uses local file)
SQLITE_DB=workbench.db

# CRM Integrations (Optional)
# Salesforce
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com
SALESFORCE_ACCESS_TOKEN=your_salesforce_access_token
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_salesforce_security_token

# HubSpot (Use either API Key OR Access Token)
HUBSPOT_API_KEY=your_hubspot_api_key
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token

# Zendesk
ZENDESK_SUBDOMAIN=your_zendesk_subdomain
ZENDESK_EMAIL=your_zendesk_email
ZENDESK_TOKEN=your_zendesk_api_token

# Email Configuration (Optional - currently uses mock email)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
